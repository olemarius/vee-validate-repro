{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/components/ui/*": ["./src/components/ui/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/*": ["./src/*"],
    },
    "target": "ESNext",
    "types": ["vue"]
  },
  "display": "Base",
  "exclude": ["node_modules", ".turbo"]
}
